{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./compiled",
    "declaration": true,
    "typeRoots": [
      "../node_modules/@types",
      "./compiled"
    ],
    "types": [
      "core-js"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    },
    "rootDirs": [
      "."
    ]
  }
}